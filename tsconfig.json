{
  "compilerOptions": {
    "target": "ES6",                   
    "module": "ES6",                   
    "outDir": "./dist",                
    "rootDir": "./src",                
    "strict": true,                    
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,              

    "moduleResolution": "node",        
    "sourceMap": true                  
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
